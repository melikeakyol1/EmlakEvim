@model emlakdeneme.Models.Kullanici

<div class="space-y-6">
    <div class="border-b border-gray-100 pb-4">
        <h2 class="text-2xl font-bold text-gray-800">Profil Bilgilerini Düzenle</h2>
        <p class="text-sm text-gray-500 mt-1">Lütfen güncel iletişim ve adres bilgilerinizi eksiksiz giriniz.</p>
    </div>

    <form id="editProfileForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <input type="hidden" asp-for="Id" />

        <div class="space-y-4">
            <h3 class="text-sm font-bold text-blue-600 uppercase tracking-wider mb-2">Temel Bilgiler</h3>

            <div>
                <label asp-for="AdSoyad" class="block text-sm font-medium text-gray-700 mb-1">Ad Soyad</label>
                <input asp-for="AdSoyad" class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition" placeholder="Adınız Soyadınız" />
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">E-posta Adresi</label>
                <input asp-for="Email" class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition" placeholder="ornek@mail.com" />
            </div>
        </div>

        <div class="space-y-4">
            <h3 class="text-sm font-bold text-green-600 uppercase tracking-wider mb-2">İletişim Bilgileri</h3>

            <div>
                <label asp-for="Telefon" class="block text-sm font-medium text-gray-700 mb-1">Telefon Numarası</label>
                <input asp-for="Telefon" class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition" placeholder="05XX XXX XX XX" />
            </div>

            <div>
                <label asp-for="Sehir" class="block text-sm font-medium text-gray-700 mb-1">Bulunduğunuz Şehir</label>
                <input asp-for="Sehir" class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition" placeholder="Örn: İstanbul" />
            </div>
        </div>

        <div class="md:col-span-2">
            <h3 class="text-sm font-bold text-orange-500 uppercase tracking-wider mb-2">Adres Detayı</h3>
            <label asp-for="Adres" class="block text-sm font-medium text-gray-700 mb-1">Tam Adres</label>
            <textarea asp-for="Adres" rows="3" class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition" placeholder="Mahalle, Sokak, No, Daire..."></textarea>
        </div>

        <div class="md:col-span-2 flex items-center gap-3 pt-4 border-t border-gray-50">
            <button type="button" class="flex-1 md:flex-none bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-xl font-bold transition shadow-lg shadow-blue-100 flex items-center justify-center gap-2" onclick="saveProfile()">
                <i class="fa-solid fa-check"></i> Değişiklikleri Kaydet
            </button>
            <button type="button" class="flex-1 md:flex-none bg-gray-100 hover:bg-gray-200 text-gray-600 px-8 py-3 rounded-xl font-bold transition" onclick="loadContent('ProfilBilgilerim')">
                İptal
            </button>
        </div>
    </form>
</div>