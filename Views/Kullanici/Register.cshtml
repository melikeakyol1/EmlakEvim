@model emlakdeneme.Models.Kullanici
@{
    ViewData["Title"] = "Üye Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Üye Ol</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            font-family: "Segoe UI", Arial, sans-serif;
            background: #f4f6f8;
        }

        .wrapper {
            display: flex;
            height: 100vh;
        }

        .image {
            flex: 1;
            background-image: url('/images/ev.webp');
            background-size: cover;
            background-position: center;
        }

        .form-area {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            width: 100%;
            max-width: 420px;
            padding: 40px;
            border-radius: 14px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

        h3 {
            text-align: center;
            font-weight: 600;
        }

        p {
            text-align: center;
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .form-control {
            height: 46px;
            border-radius: 8px;
        }

        .btn-main {
            height: 46px;
            background: #1f2933;
            color: #fff;
            font-weight: 600;
            border-radius: 8px;
            border: none;
        }

        .links {
            text-align: center;
            margin-top: 25px;
        }

            .links a {
                text-decoration: none;
                font-weight: 500;
                color: #2563eb;
            }

        @@media (max-width: 768px) {
            .image {
                display: none;
            }
        }
    </style>
</head>

<body>

    <div class="wrapper">

        <div class="image"></div>

        <div class="form-area">
            <div class="card">

                <h3>Üye Ol</h3>
                <p>Emlak sistemine hızlıca kayıt olun</p>

                <form asp-action="Register" method="post">
                    <input asp-for="AdSoyad" class="form-control mb-3" placeholder="Ad Soyad" />
                    <input asp-for="Email" class="form-control mb-3" placeholder="E-posta" />
                    <input asp-for="Sifre" type="password" class="form-control mb-3" placeholder="Şifre" />

                    <button type="submit" class="btn btn-main w-100">
                        Kayıt Ol
                    </button>
                </form>

                <div class="links">
                    Zaten hesabın var mı?
                    <a asp-action="Login" asp-controller="Kullanici">Giriş Yap</a>
                </div>

            </div>
        </div>

    </div>

</body>
</html>
