@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(to bottom, #87ceeb, #e0f7ff);
            font-family: Arial, sans-serif;
        }

        .house {
            position: relative;
            width: 380px;
            background: #f4f4f4;
            border-radius: 0 0 20px 20px;
            padding: 40px 30px 30px;
            box-shadow: 0 20px 40px rgba(0,0,0,.3);
        }

        .roof {
            position: absolute;
            top: -90px;
            left: 0;
            width: 100%;
            height: 90px;
            background: #8b0000;
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        }

        .door {
            background: #6b3e26;
            border-radius: 10px;
            padding: 25px;
            color: #fff;
        }

            .door h4 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-control {
            background: rgba(255,255,255,0.85);
            border: none;
            margin-bottom: 12px;
        }

        .btn-login {
            width: 100%;
            background: #ffcc00;
            border: none;
            font-weight: bold;
        }

        .knob {
            position: absolute;
            right: 25px;
            top: 55%;
            width: 12px;
            height: 12px;
            background: gold;
            border-radius: 50%;
        }

        a {
            color: #fff;
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="house">
        <div class="roof"></div>

        <div class="door">
            <div class="knob"></div>

            <h4>🏠 Eve Giriş</h4>

            <!-- FORM DEĞİŞMEDİ -->
            <form asp-action="Login" method="post">
                <input name="email" type="email" class="form-control" placeholder="Email ID" />
                <input name="sifre" type="password" class="form-control" placeholder="Şifre" />

                <button type="submit" class="btn btn-login mt-2">
                    🔑 Kapıyı Aç
                </button>
            </form>

            <p class="text-center mt-3">
                Hesabın yok mu?
                <a asp-action="Register" asp-controller="Kullanici">Kayıt Ol</a>
            </p>
        </div>
    </div>

</body>
</html>
