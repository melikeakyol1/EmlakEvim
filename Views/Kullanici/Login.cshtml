@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            font-family: "Segoe UI", Arial, sans-serif;
            background: #f4f6f8;
        }

        .login-wrapper {
            display: flex;
            height: 100vh;
        }

        /* SOL GÖRSEL */
        .login-image {
            flex: 1;
            background-image: url('/images/ev.webp');
            background-size: cover;
            background-position: center;
        }

        /* SAĞ ALAN */
        .login-form {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* KART */
        .form-box {
            width: 100%;
            max-width: 420px;
            background: #ffffff;
            padding: 40px;
            border-radius: 14px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

        /* LOGO */
        .logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .logo img {
                height: 45px;
            }

        h3 {
            text-align: center;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .subtitle {
            text-align: center;
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .form-control {
            height: 46px;
            border-radius: 8px;
        }

        .options {
            display: flex;
            justify-content: space-between;
            font-size: 14px;
            margin-bottom: 20px;
        }

            .options a {
                text-decoration: none;
                color: #2563eb;
            }

        .btn-login {
            height: 46px;
            background: #1f2933;
            color: #fff;
            font-weight: 600;
            border-radius: 8px;
            border: none;
        }

            .btn-login:hover {
                background: #111827;
            }

        .register {
            text-align: center;
            margin-top: 25px;
            font-size: 14px;
        }

            .register a {
                text-decoration: none;
                font-weight: 600;
                color: #2563eb;
            }

        /* MOBİL */
        @@media (max-width: 768px) {
            .login-image {
                display: none;
            }
        }
    </style>
</head>

<body>

    <div class="login-wrapper">

        <!-- SOL GÖRSEL -->
        <div class="login-image"></div>

        <!-- SAĞ FORM -->
        <div class="login-form">
            <div class="form-box">

                <!-- LOGO -->
                <div class="logo">
                    <img src="/images/user.png" alt="Logo" />
                </div>

                <h3>Giriş Yap</h3>
                <div class="subtitle">Hesabınıza güvenle giriş yapın</div>

                <form asp-action="Login" method="post">

                    <div class="mb-3">
                        <input name="email" type="email" class="form-control" placeholder="E-posta" required />
                    </div>

                    <div class="mb-3">
                        <input name="sifre" type="password" class="form-control" placeholder="Şifre" required />
                    </div>

                    <div class="options">
                        <div></div>
                        <a asp-action="ForgotPassword" asp-controller="Kullanici">
                            Şifremi Unuttum
                        </a>
                    </div>

                    <button type="submit" class="btn btn-login w-100">
                        Giriş Yap
                    </button>
                </form>

                <div class="register">
                    Hesabın yok mu?
                    <a asp-action="Register" asp-controller="Kullanici">Kayıt Ol</a>
                </div>

            </div>
        </div>

    </div>

</body>
</html>