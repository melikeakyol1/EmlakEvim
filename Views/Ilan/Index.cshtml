@model IEnumerable<emlakdeneme.Models.Ilan>

@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container mt-4">
    <div class="row">

        <!-- SOL FİLTRELEME -->
        <div class="col-md-3 mt-4">
            <h5 class="mb-3 fw-bold">Filtreleme</h5>
            <div class="filter-box p-3 border rounded shadow-sm bg-light">
                <form method="get" asp-controller="Ilan" asp-action="Index">

                    <div class="mb-2">
                        <input type="text" class="form-control" name="Sehir" placeholder="Şehir">
                    </div>

                    <div class="mb-2">
                        <input type="text" class="form-control" name="Semt" placeholder="Semt">
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" name="Durum" placeholder="Satılık/Kiralık">
                    </div>

                    <button class="btn btn-primary w-100 fw-bold py-2" type="submit">
                        🔍 Filtrele
                    </button>
                </form>
            </div>
        </div>

        <!-- İLAN LİSTESİ -->
        <div class="col-md-9">
            <div class="row g-3">
                @foreach (var ilan in Model)
                {
                    <div class="col-md-4">
                        <div class="card ilan-card">
                            <img src="@Url.Content(ilan.Resim ?? "~/images/ilan1.jpg")"
                                 class="card-img-top" />

                            <div class="card-body">
                                <h5 class="card-title">
                                    @ilan.Baslik (@ilan.Tip)
                                </h5>

                                <p>@ilan.Sehir - @ilan.Semt</p>

                                <button class="btn btn-danger btn-sm">
                                    @ilan.Fiyat.ToString("C0")
                                </button>

                                <!-- FAVORİ KALBİ -->
                                <form asp-controller="Favori"
                                      asp-action="Add"
                                      method="post"
                                      class="mt-2">

                                    <input type="hidden" name="ilanId" value="@ilan.Id" />

                                    <button type="submit" class="btn btn-light btn-sm">
                                        <i class="far fa-heart"></i> Favoriye Ekle
                                    </button>
                                </form>

                                <!-- ADMIN -->
                                <div class="mt-2">
                                    <a asp-action="Edit"
                                       asp-route-id="@ilan.Id"
                                       class="btn btn-primary">
                                        Düzenle
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@ilan.Id"
                                       class="btn btn-primary">
                                        Sil
                                    </a>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>